{
  "name": "AutoDoc",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Make Google Docs quickly",
  "action": {
    "default_popup": "popup.html",
    "description": "Make Google Docs quickly"
  },
  "icons": {
    "48": "autodoc.png"
  },
  "permissions": ["activeTab","scripting","storage"],
  "host_permissions": ["<all_urls>"],
  "background": {"service_worker": "background.js"},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+G"
      },
      "description": "Make a new doc",
      "enabled": true
      },
    "make-doc": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Make a new doc",
      "enabled": true
      },
    "open-settings": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Open settings",
      "enabled": true
      }
  }
}

